{
  "ciProvider": "github",
  "mergeStrategy": "fast-forward",
  "requireConventionalCommits": true,
  "initialBranch": "develop",
  "finalBranch": "main",
  "branchFlow": ["develop", "staging", "main"],
  "autoMerge": {
    "staging": true,
    "main": true
  },
  "semver": {
    "bumpRules": {
      "feat": "minor",
      "fix": "patch",
      "breaking": "major"
    }
  },
  "domains": {
    "frontend": {
      "paths": ["src/frontend/**"],
      "description": "Frontend application changes",
      "test": true,
      "deployable": true,
      "remoteTestable": true
    },
    "backend": {
      "paths": ["src/backend/**"],
      "description": "Backend API changes",
      "test": true,
      "deployable": true,
      "remoteTestable": true
    },
    "api": {
      "paths": ["src/api/**"],
      "description": "API gateway changes",
      "test": true,
      "deployable": true
    },
    "shared": {
      "paths": ["src/shared/**"],
      "description": "Shared library changes",
      "test": true,
      "deployable": false
    }
  }
}
